code-1(scheme = __default)
    // fetch syntax plugin
    prism(scheme)
    .explain.code
        margin-bottom: rem(10px)
        div
            width: 100%
            position: relative
            min-height: rem(90px)
            margin-bottom: rem(15px)
            background: scheme.syntax.background
            box-shadow: luminosity(scheme.background) > .5 ? -1px 3px 3px _90 : none
            overflow: auto
            pre
                display: flex
                align-items: center
                padding: rem(30px) 0 rem(30px) rem(30px)
                background: @background
                +max(3)
                    min-width: rem(700px)
                code
                    color: scheme.syntax.default
                    line-height: 1.4
                    background: inherit
            aside
                display: none
                position: absolute
                top: 0
                right: 0
                min-width: rem(45px)
                min-height: rem(45px)
                justify-content: center
                align-items: center
                font-size: .9rem
                padding: luminosity(scheme.background) < .5 ? 4px rem(15px) 5px 3px : 4px rem(10px) 5px
                b { color: lighten(scheme.syntax.background, 40%); padding-left: rem(12px); background: inherit }
                +min(2)
                    display: inline-flex
            &.pug
                aside
                    color: luminosity(scheme.background) < .5 ? _markup_dark : _100
                    border-bottom: luminosity(scheme.background) < .5 ? 1px solid darken(_markup_dark, 28%) : 0
                    background: luminosity(scheme.background) < .5 ? inherit : _markup
            &.styl
                aside
                    color: luminosity(scheme.background) < .5 ? _style_dark : _100
                    border-bottom: luminosity(scheme.background) < .5 ? 1px solid darken(_style_dark, 27%) : 0
                    background: luminosity(scheme.background) < .5 ? inherit : _style
            &.image
                aside
                    color: luminosity(scheme.background) < .5 ? _image_dark : _100
                    border-bottom: luminosity(scheme.background) < .5 ? 1px solid darken(_image_dark, 27%) : 0
                    background: luminosity(scheme.background) < .5 ? inherit : _image
            &.fonts
                aside
                    color: luminosity(scheme.background) < .5 ? _font_dark : _100
                    border-bottom: luminosity(scheme.background) < .5 ? 1px solid darken(_font_dark, 27%) : 0
                    background: luminosity(scheme.background) < .5 ? inherit : _font
            &.js
                aside
                    color: luminosity(scheme.background) < .5 ? _js_dark : _40
                    border-bottom: luminosity(scheme.background) < .5 ? 1px solid darken(_js_dark, 28%) : 0
                    background: luminosity(scheme.background) < .5 ? inherit : _js
            &.map
                aside
                    border-bottom: luminosity(scheme.background) < .5 ? 1px dashed rgba(255, 255, 255, 0.28) : 0
                    background: luminosity(scheme.background) < .5 ? inherit : _50
                background: inherit
            .comment
                color: scheme.syntax.comment
            i { font-style: normal }
    { block }
