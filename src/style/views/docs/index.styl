.docs
    // assignments
    docs_scheme = nebula
    docs_b3_c_x_min = rem(1050px)
    // set dark theme for docs section
    schemer(docs_scheme)
    // call component styles with selected scheme
    // code samples
    code-1(docs_scheme)
    // header
    +header-2(docs_scheme)
        position: static
        +min(2)
            position: fixed
        .core
            +min(3)
                min-width: docs_b3_c_x_min
    // navigation
    +nav-2(docs_scheme)
        +max(2)
            z-index: 2
        +min(3)
            position: sticky
            top: rem(103px)
            width: auto
            order: 0
            ul
                position: sticky
                top: rem(125px)
                height: 86vh
    // footer
    +footer-1(docs_scheme)
        > div div
            &:first-of-type
                +max(2)
                    ul
                        margin-bottom: 0
            &:last-of-type
                +max(2)
                    order: 2
                    ul
                        margin-top: rem(10px)
                        margin-bottom: 25px
                        li
                            display: inline-block
                            margin: 5px 8px
                +min(3)
                    ul li
                        margin: 0
                        padding: 0 0 8px
    main
        +min(2)
            width: 69%
            margin: initial
            padding-left: rem(50px)
            padding-top: rem(103px)
        +min(3)
            margin: auto
            width: b3_content_width
            min-width: docs_b3_c_x_min
            justify-content: space-between
            padding-left: 0
            padding-bottom: 0
        .content
            margin: auto
            padding-bottom: rem(50px)
            +min(1)
                padding-top: rem(11px)
            +min(2)
                width: 100%
                min-width: initial
                margin: initial
                padding-top: rem(22px)
            +min(3)
                width: 74%
                min-width: initial
            section
                &.start
                    .install-options
                        display: flex
                        align-items: center
                        div
                            margin-left: rem(10px)
                            padding-left: rem(14px)
                            border-radius: rem(14px)
                            border-left: 1px solid darken(scheme.border, 50%)
                            p
                                margin: rem(9px) 0
                                span
                                    color: scheme.default
                &.architecture
                    h4
                        &::before
                            content: '\1F4C2'
                            color: _50
                            font-size: 1.6rem
                            font-weight: normal
                            padding-right: rem(10px)
                        &:nth-of-type(1)::before
                            content: '\1F5C3'
                    figure // schematic drawing
                        margin: rem(35px) 0
                        figcaption
                            float: right
                            font-size: 0.9rem
                            strong
                                padding-left: rem(12px)
                        svg
                            margin: 20px 0
                            width: 100%
                            height: auto
        .dir // denote directory refs
            display: inline-block
            padding: 1px 4px 3px
            text-shadow: -1px -1px 0 _10
            background: darken(_20, 9%)
            box-shadow: inset 0 0 6px _10
            border-radius: 2px
        .file // denote file refs
            font-family: $monospace
            font-size: .96rem
            padding: 0 rem(3px) rem(3px)
            border-bottom: 1px solid _45
        .mixin:not(.token) // denote mixin schemas; avoid conflict with prism syntax tokens
            color: _40
            font-size: 1.2rem
            text-shadow: -1px -1px 0 _15
            code
                text-shadow: none
    // partials
    @require 'components'
