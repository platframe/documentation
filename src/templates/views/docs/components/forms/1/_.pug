section(class="component" id="1")

    header

        h3: span 1
        dl.inline
            div
                dt Type
                dd contact
            div.comma
                dt Tags
                dd validation
                dd interactive
                dd no-script
                dd anti-spam

    h4 Preview

    +iframe({ slug: "forms/1", height: 580 })

    h4 Implementation

    section.implement

        .explain

            .routine

                h5 Markup

                table
                    caption.signature
                        | form-1({
                        i &nbsp;settings&nbsp;
                        |})

                    thead
                        tr
                            th Parameter
                            th Description
                            th Type
                    tbody
                        tr
                            td.parameter legend
                            td.description form caption (core fieldset)
                            td.type object
                        tr
                            td.parameter action
                            td.description URL for the form processing logic
                            td.type string
                        tr
                            td.parameter method
                            td.description data transfer method
                            td.type string
                        tr
                            td.parameter phone
                            td.description toggle the phone number field
                            td.type boolean
                        tr
                            td.parameter select
                            td.description toggle the select box
                            td.type object
                        tr
                            td.parameter spam
                            td.description toggle the simple spam questionnaire
                            td.type boolean
                        tr
                            td.parameter hook
                            td.description additional CSS class attribute
                            td.type string

            .brief

                h5 Brief
                p.
                    A basic contact form relying only on HTML and CSS. Supports input validation and feedback.
                    A simplistic anti-spam section can be enabled or replaced with a more robust solution.

                p.
                    Optionally use with the included #[a(href="/docs/#logic-modules-included-form") form] module
                    to send form submissions and enable better spam protection.

        .explain

            .paths

                h5 Paths

                ul
                    li location:&nbsp; #[code components/forms/1]
                    li activate:&nbsp; #[code templates/_/mixins.pug]

            .dependencies

                h5 Dependencies

                ul
                    li.pug
                        svg: use(xlink:href="/assets/images/_sprites/symbols.svg#html")
                        span _.pug
                    li.styl
                        svg: use(xlink:href="/assets/images/_sprites/symbols.svg#css")
                        span index.styl
                    li.svg
                        svg: use(xlink:href="/assets/images/_sprites/symbols.svg#svg")
                        span *.svg

        h5 Examples

        .explain.code

            .pug

                pre
                    code.language-pug.

                        // minimal form that does not require any additional JavaScript
                        +form-1({
                            action: "assets/logic/php/process-form.php",
                            method: "post",
                            spam: true,
                        })

                        // this form can use Platframe's form module to take care of spam and sending
                        +form-1({
                            legend: {
                                text: "Post Box",
                                center: true,
                            },
                            phone: true,
                            select: {
                                name: "subject",
                                label: "Subject:",
                                options: [
                                    {
                                        name: "Option 1",
                                        value: "option 1",
                                        selected: "selected"
                                    },
                                    { name: "Option 2", value: "option 2" },
                                    { name: "Option 3", value: "option 3" },
                                ]
                            }
                        })

                aside .pug

        .explain.code

            .styl

                pre

                    code.language-stylus.

                        // activate form styles with flat button
                        form-1()

                        // or use alternative 3D button
                        form-1(button-type: '3d')

                aside .styl
