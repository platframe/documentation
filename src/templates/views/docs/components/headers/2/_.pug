    header

        h3: span 2
        dl.inline
            div
                dt Type
                dd secondary
            div.comma
                dt Tags
                dd sectional
                dd breadcrumbs
                dd menu

    h4 Preview

    +iframe("headers/2")

    h4 Implementation

    section.implement

        .explain

            .routine

                h5 Markup

                table
                    caption.signature
                        | header-2(
                        i url
                        |,&nbsp;
                        i icon
                        |,&nbsp;
                        i h1
                        |,&nbsp;
                        i h2
                        |,&nbsp;
                        i [breadcrumbs]
                        |,&nbsp;
                        i [hook]
                        |)

                    thead
                        tr
                            th Parameter
                            th Definition
                            th Type
                    tbody
                        tr
                            td.parameter url
                            td.definition URL: homepage
                            td.type string
                        tr
                            td.parameter icon
                            td.definition SVG: fragment
                            td.type string
                        tr
                            td.parameter h1
                            td.definition heading: global
                            td.type string
                        tr
                            td.parameter h2
