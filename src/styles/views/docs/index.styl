docs_padding_top = 101px

.docs
    // assignments
    docs_c_x_b3_min = rem(1050px)
    // code samples
    code-1()
    // header
    +header-2()
        position: static
        +min(2)
            position: fixed
        .core
            +min(3)
                min-width: docs_c_x_b3_min
    // navigation
    &:not(.components)
        +nav-2()
            +max(2)
                z-index: 2
            +min(2)
                top: 100px
                li:nth-last-of-type(2)::after
                    content: ''
                    display: block
                    width: rem(190px)
                    margin-bottom: rem(17px)
                    padding-bottom: rem(17px)
                    border-bottom: 1px solid scheme.border
            +min(3)
                position: sticky
                top: rem(docs_padding_top)
                width: auto
                order: 0
                ul { height: 100vh }
    // footer
    +footer-1()
        > div div
            &:first-of-type
                +max(2)
                    ul
                        margin-bottom: 0
            &:last-of-type
                +max(2)
                    order: 2
                    ul
                        margin-top: rem(10px)
                        margin-bottom: 25px
                        li
                            display: inline-block
                            margin: 5px 8px
                +min(3)
                    ul li
                        margin: 0
                        padding: 0 0 8px
    main
        +min(2)
            width: 69%
            margin: initial
            padding-left: rem(50px)
            padding-top: rem(docs_padding_top)
        +min(3)
            margin: auto
            width: content_width_b3
            min-width: docs_c_x_b3_min
            justify-content: space-between
            padding-left: 0
            padding-bottom: 0
        .content
            margin: auto
            padding-bottom: rem(50px)
            +min(1)
                padding-top: rem(11px)
            +min(2)
                width: 100%
                min-width: initial
                margin: initial
                padding-top: rem(22px)
            +min(3)
                width: 74%
                min-width: initial
            [id] // account for fixed header to ensure sections are fully visible when scrolled to
                scroll-margin-top: rem(85px)
            [id*="-"] // sub-sections are hyphenated and require more room
                scroll-margin-top: rem(120px)
            section:not(.components section)
                margin-top: 2rem
                margin-right -26%
                padding-right 26%
                &:not(:first-of-type)
                    margin-top: 2.5rem
                    padding-top: 3.3rem
                    border-top: 1px solid scheme.border
                aside:not(.explain.code aside)
                    margin: 2rem 0
                p.mixin
                    margin-top: .5em
                &.start
                    .requirements
                        span
                            font-weight: 600
                    .install-options
                        display: flex
                        align-items: center
                        div
                            margin-left: rem(10px)
                            padding-left: rem(14px)
                            border-left: 2px solid _80
                            p
                                margin: rem(9px) 0
                                span
                                    color: _65
                &.architecture
                    h4
                        &::before
                            content: '\1F4C2'
                            color: _50
                            font-size: 1.6rem
                            font-weight: normal
                            padding-right: rem(10px)
                        &:nth-of-type(1)::before
                            content: '\1F5C3'
                    figure // schematic drawing
                        margin: rem(35px) 0
                        figcaption
                            float: right
                            font-size: 0.9rem
                            strong
                                padding-left: rem(12px)
                        svg
                            margin: 20px 0
                            width: 100%
                            height: auto
                &.contribute
                    width: stretch // temp compensation for insufficient content
    // partials
    @require '_/*'
    @require 'components'
